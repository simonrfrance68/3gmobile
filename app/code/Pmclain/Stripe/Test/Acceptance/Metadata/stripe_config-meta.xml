            <object key="pmclain_stripe" dataType="stripe_config_state">
                <object key="fields" dataType="stripe_config_state">
                    <object key="active" dataType="active">
                        <field key="value">integer</field>
                    </object>
                    <object key="test_mode" dataType="test_mode">
                        <field key="value">integer</field>
                    </object>
                    <object key="test_secret_key" dataType="test_secret_key">
                        <field key="value">string</field>
                    </object>
                    <object key="test_publishable_key" dataType="test_publishable_key">
                        <field key="value">string</field>
                    </object>
                    <object key="verify_3dsecure" dataType="verify_3dsecure">
                        <field key="value">integer</field>
                    </object>
                </object>
            </object>
        </object>
    </operation>
</operations>
