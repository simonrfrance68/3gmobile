<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">mageworx_seoai_category_logs_listing.mageworx_seoai_category_logs_listing_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>mageworx_seoai_category_logs_columns</spinner>
        <deps>
            <dep>mageworx_seoai_category_logs_listing.mageworx_seoai_category_logs_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="mageworx_seoai_category_logs_listing_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <storageConfig>
                <param name="dataScope" xsi:type="string">filters.store_id</param>
            </storageConfig>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="MageWorx\SeoAI\Ui\DataProvider\Logs\Category\LogsDataProvider" name="mageworx_seoai_category_logs_listing_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <listingToolbar name="listing_top">
        <bookmark name="bookmarks"/>
        <columnsControls name="columns_controls"/>
        <filters name="listing_filters"/>
        <paging name="listing_paging"/>
    </listingToolbar>

    <columns name="mageworx_seoai_category_logs_columns" class="Magento\Ui\Component\Listing\Columns">
        <column name="entity_id" sortOrder="10">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">ID</label>
                <sorting>desc</sorting>
            </settings>
        </column>
        <column name="category_id" sortOrder="20">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">Category ID</label>
            </settings>
        </column>
        <column name="message_type" sortOrder="30">
            <settings>
                <addField>true</addField>
                <filter>text</filter>
                <label translate="true">Message type</label>
            </settings>
        </column>
        <column name="request_message" sortOrder="40">
            <settings>
                <addField>true</addField>
                <filter>text</filter>
                <sortable>false</sortable>
                <label translate="true">Request Message</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="response_message" sortOrder="60">
            <settings>
                <addField>true</addField>
                <filter>text</filter>
                <sortable>false</sortable>
                <label translate="true">Response Message</label>
                <visible>true</visible>
            </settings>
        </column>
        <column name="variant_index" sortOrder="70">
            <settings>
                <addField>true</addField>
                <filter>textRange</filter>
                <label translate="true">Variant Index</label>
            </settings>
        </column>
        <column name="created_at" class="Magento\Ui\Component\Listing\Columns\Date" component="Magento_Ui/js/grid/columns/date" sortOrder="100">
            <settings>
                <addField>true</addField>
                <timezone>false</timezone>
                <dateFormat>MMM d, y h:mm a</dateFormat>
                <dataType>date</dataType>
                <label translate="true">Created</label>
            </settings>
        </column>
    </columns>
</listing>
